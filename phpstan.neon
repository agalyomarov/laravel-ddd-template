includes:
    # Подключаем Larastan для Laravel
    - ./vendor/larastan/larastan/extension.neon

    # Подключаем строгие правила для более жёсткой проверки
    - ./vendor/phpstan/phpstan-strict-rules/rules.neon

parameters:
    # Уровень проверки (максимальный — 10)
    level: 10

    # Пути, которые проверяем
    paths:
        - app/

    # Проверять, что у функций и методов есть указанные типы параметров и возвращаемого значения
    checkMissingTypehints: true

    # Проверять, что функции возвращают типы, соответствующие объявлению
    # (автоматически включено через strict-rules)

    # Проверять корректность написания имён функций и методов
    checkFunctionNameCase: true

    # Проверять использование типа mixed — чтобы избежать его бездумного применения
    checkExplicitMixed: true

# Пояснения:
#  - strict-rules подключают набор правил, в том числе и по правильному типу возвращаемого значения
#  - параметр strictRules больше не нужен, он устарел
